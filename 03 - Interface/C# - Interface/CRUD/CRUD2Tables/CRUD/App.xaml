             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CRUD"
             StartupUri="MainWindow.xaml">
	<Application.Resources>

		<SolidColorBrush x:Key="BtnBorder" Color="#FF939597"/>
